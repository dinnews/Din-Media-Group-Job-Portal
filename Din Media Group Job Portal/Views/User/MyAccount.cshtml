@model Din_Media_Group_Job_Portal.Models.tb_user
@{
    if (Session["type"] == null)
    {
        ViewBag.Title = "MyAccount";
        Layout = "~/Views/Shared/UserLayout.cshtml";
    }
    else if (Session["type"] == "jobseeker")
    {
        Response.Redirect("~/User/Home");
    }
    else if (Session["type"] == "employer")
    {
        Response.Redirect("~/Employer/EmployerHome");
    }
    else
    {
        Session.Abandon();
        Response.Redirect("~/User/MyAccount");
       
    }
}

<div id="wrapper">


    <!-- Header
    ================================================== -->
    <header class="sticky-header full-width">
        @Html.Partial("~/Views/Header/_partialUserHeader.cshtml")
     
    </header>
    <div class="clearfix"></div>
    <script>
        $(".sticky-header #logo a img").attr("src", "/Content/userContent/images/logo.png");
    </script>

    <!-- Titlebar
    ================================================== -->
    <div id="titlebar" class="single">
        <div class="container">

            <div class="sixteen columns">
                <h2>My Account</h2>
                <nav id="breadcrumbs">
                    <ul>
                        <li>You are here:</li>
                        <li><a href="#">Home</a></li>
                        <li>My Account</li>
                    </ul>
                </nav>
            </div>

        </div>
    </div>


    <!-- Content
    ================================================== -->
    <!-- Container -->
    <div class="container">

        <div class="my-account">

            <ul class="tabs-nav">
                <li class=""><a href="#tab1">Login</a></li>
                <li><a href="#tab2">Register</a></li>
            </ul>

            <div class="tabs-container">
                <!-- Login -->
                <div class="tab-content" id="tab1" style="display: none;">
                    <form method="post" class="login" action="@Url.Content("~/User/MyAccount")">

                        <p class="form-row form-row-wide">
                            <label for="username">
                                Username:
                                <i class="ln ln-icon-Male"></i>
                                <input type="text" class="input-text" name="userName" id="username" value="" required />
                            </label>
                        </p>

                        <p class="form-row form-row-wide">
                            <label for="password">
                                Password:
                                <i class="ln ln-icon-Lock-2"></i>
                                <input class="input-text" type="password" name="password" id="password" required/>
                            </label>
                        </p>

                        <p class="form-row">
                            <input type="submit" class="button border fw margin-top-10" name="login" value="Login" />
                            <p class="lost_password">
                               @ViewBag.ErrorLogin
                            </p>
                            <label for="rememberme" class="rememberme">
                                <input name="rememberme" type="checkbox" id="rememberme" value="forever" /> Remember Me
                            </label>
                        

                        <p class="lost_password">
                            <a href="#small-dialog" class="popup-with-zoom-anim">Lost Your Password?</a>
                        </p>

                    </form>
                </div>

                <!-- Register -->
                <div class="tab-content" id="tab2" style="display: none;">
                  <a href="@Url.Content("~/Employer/MyAccount#tab2")" style="float:right;">Signup as Employer </a>
                   <div class="clearfix margin-bottom-0"></div>
                    <form method="post" class="register" action="@Url.Content("~/User/ValidateEmployeeSignUp")">
                        <div class="single">
                            @if (!ViewData.ModelState.IsValid && ViewData.ModelState.IsValid && ViewData.ModelState["first_name"].Errors.Count>0)
                            {
                                <span style="color:red">
                                   
                                         @ViewData.ModelState["first_name"].Errors[0].ErrorMessage
                                   
                                </span>
                            }
                            <p class="form-row form-row-wide">
                                <label for="first-name">
                                    First Name
                                    <i class="ln ln-icon-Male"></i>
                                    <input type="text" class="input-text" name="first_name" id="first-name" value="" required />
                                </label>
                            </p>
                            @if (!ViewData.ModelState.IsValid && ViewData.ModelState.IsValid && ViewData.ModelState["last_name"].Errors.Count > 0)
                            {
                                <span style="color:red">
                                    @ViewData.ModelState["last_name"].Errors[0].ErrorMessage
                                </span>
                            }
                            <p class="form-row form-row-wide">
                                <label for="last-name">
                                    Last Name
                                    <i class="ln ln-icon-Male"></i>
                                    <input type="text" class="input-text" name="last_name" id="last-name" value="" required />
                                </label>
                            </p>
                            @if (!ViewData.ModelState.IsValid && ViewData.ModelState["email"].Errors.Count > 0)
                            {
                                <span style="color:red">
                                    @ViewData.ModelState["email"].Errors[0].ErrorMessage
                                </span>
                            }
                            <p class="form-row form-row-wide">
                                <label for="email2">
                                    Email:
                                    <i class="ln ln-icon-Mail"></i>
                                    <input type="email" class="input-text" name="email" id="email2" value="" required/>
                                </label>
                            </p>
                            @if (!ViewData.ModelState.IsValid && ViewData.ModelState["gender"].Errors.Count > 0)
                            {
                                <span style="color:red">
                                    @ViewData.ModelState["gender"].Errors[0].ErrorMessage
                                </span>
                            }
                            <p class="form-row form-row-wide">
                                <label for="gender">
                                    <select data-placeholder="Choose Category" class="chosen-select-no-single" name="gender" required>
                                        <option selected="selected" value=null>Select your gender</option>
                                        <option value="female"> Female</option>
                                        <option value="male">Male</option>
                                        <option value="other">Other</option>
                                    </select>
                                </label>
                            </p>
                            @if (!ViewData.ModelState.IsValid && ViewData.ModelState["password"].Errors.Count > 0)
                            {
                                <span style="color:red">
                                    @ViewData.ModelState["password"].Errors[0].ErrorMessage
                                </span>
                            }
                            <p class="form-row form-row-wide">
                                <label for="password1">
                                    Password:  (Enter between 6 and 32 characters)
                                    <i class="ln ln-icon-Lock-2"></i>
                                    <input class="input-text" type="password" name="password" id="password1" required />
                                </label>
                            </p>
                               

                            <p class="form-row form-row-wide">
                                <label for="password2">
                                    Repeat Password:
                                    <i class="ln ln-icon-Lock-2"></i>
                                    <input class="input-text" type="password" name="password_reenter" id="password2" required />
                                </label>
                            </p>
                        </div>
                        <div class="mainpanel single">
                            <p class="form-row form-row-wide">
                                <h3>
                                    What are You looking for
                                </h3>
                            </p>
                            @if (!ViewData.ModelState.IsValid && ViewData.ModelState["location"].Errors.Count > 0)
                            {
                                <span style="color:red">
                                    @ViewData.ModelState["location"].Errors[0].ErrorMessage
                                </span>
                            }
                            <p class="form-row form-row-wide">
                                <label for="work-location">
                                    Preferred Work Location:
                                    <i class="ln ln-icon-Location-2"></i>
                                    <input type="text" class="input-text" name="location" id="work-location" value="" placeholder="e.g. Lahore" required/>
                                </label>
                            </p>
                            @if (!ViewData.ModelState.IsValid && ViewData.ModelState["job_title"].Errors.Count > 0)
                            {
                                <span style="color:red">
                                    @ViewData.ModelState["job_title"].Errors[0].ErrorMessage
                                </span>
                            }
                            <p class="form-row form-row-wide">
                                <label for="job-title">
                                    Desired Job Title:
                                    <i class="ln ln-icon-Suitcase"></i>
                                    <input class="input-text" type="text" name="job_title" id="job-title" placeholder="e.g. Software Engineer" required/>
                                </label>
                            </p>
                            @if (!ViewData.ModelState.IsValid )
                            {
                                <span style="color:red">
                                    <!--ViewData.ModelState["interest"].Errors[0].ErrorMessage-->
                                </span>
                            }
                            <p class="form-row form-row-wide">
                                <label for="job-title">
                                    I'm interested in (Please select at least one option)
                                </label>
                                <div class="row">
                                   <input class="checkboxes" type="checkbox" name="fulltime" id="interests" />Full Time
                                   <input class="checkboxes" type="checkbox" name="parttime" id="interests" />Part Time
                                   <input class="checkboxes" type="checkbox" name="internship" id="interests" />Internship
                                   <input class="checkboxes" type="checkbox" name="Govt" id="interests" />Govt Jobs
                               </div>
                            </p>
                            @if (!ViewData.ModelState.IsValid && ViewData.ModelState["job_catagory_field"].Errors.Count > 0)
                            {
                                <span style="color:red">
                                    @ViewData.ModelState["job_catagory_field"].Errors[0].ErrorMessage
                                </span>
                            }
                            <p class="form-row form-row-wide">
                                <label for="job-title">
                                    Select Your Catagory
                                    <select data-placeholder="Choose Category" class="chosen-select-no-single" name="job_catagory_field" required>
                                        <option selected="selected" value=null>Select your Catagory</option>
                                        <option value="Software Engineer">Software Engineer</option>
                                        <option value="Qualit Manager">Qualit Manager</option>
                                        <option value="Content Writer">Content Writer</option>
                                    </select>
                                </label>
                            </p>
                        </div>
                        <p class="form-row">
                            <input type="submit" class="button border fw margin-top-10" name="register" value="Register" />
                        </p>
                        <p class="form-row form-row-wide">
                            <div class="row">
                                By clicking Register, you accept our <a href="#">Terms and Conditions</a>.
                            </div>
                        </p>
                       
                    </form>
                 </div>
            </div>
        </div>
    </div>

    <!-- Footer
    ================================================== -->
    <div class="margin-top-30"></div>

    @Html.Partial("~/Views/Footer/_partialUserFooter.cshtml")

    <!-- Back To Top Button -->
    <div id="backtotop"><a href="#"></a></div>

</div>
<!-- Wrapper / End -->

<!-- Modal for Lost Password
    ================================================== -->
<div id="small-dialog" class="zoom-anim-dialog mfp-hide apply-popup">
    <div class="small-dialog-headline">
        <h2>Reset Password</h2>
        Provide your email below to get insruction to update your Password.
    </div>
    <div class="my-account">
        <div class="small-dialog-content">
            <form action="#" method="post">
                <p class="form-row form-row-wide">
                    <label for="email-forgot-password">
                        Your Email:

                        <i class="ln ln-icon-Email"></i>
                        <input class="input-text" type="email" name="email-forgot-password" id="email-forgot-password" required />
                    </label>
                </p>
                <p class="form-row">
                    <input type="submit" class="button border fw margin-top-10" name="login" value="Submit" />
                <p class="lost_password">

            </form>
        </div>
        </div>

    </div>
