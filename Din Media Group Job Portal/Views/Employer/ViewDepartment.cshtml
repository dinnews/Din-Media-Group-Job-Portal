@model Din_Media_Group_Job_Portal.Models.tb_user
@{
    ViewBag.Title = "View Departments";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}

<script>
    $(function () {
        // Replace all textarea tags with SCEditor
        $('#summary').sceditor({
            plugins: 'bbcode',
            style: '/Content/userContent/css/jquery.sceditor.default.min.css',
            emoticonsRoot: "/emoticons/",
            emoticonsEnabled: false
        });
    });
</script>
<div id="wrapper">


    <!-- Header
    ================================================== -->
    <header class="sticky-header full-width">
        @Html.Partial("~/Views/Header/HeaderSelectionEmployer.cshtml")
    </header>
    <div class="clearfix"></div>
    <script>
        $(".sticky-header #logo a img").attr("src", "/Content/userContent/images/logo.png");
    </script>

    <!-- Titlebar
    ================================================== -->
    <div id="titlebar" class="single submit-page" style=" background: url(/Employer_images/cover_images/department-cover.jpg) fixed border-box; background-size: contain; background-size: cover; ">
        <div class="container" style="background-color: rgba(211, 211, 211, 0.5);">
            <div class="sixteen columns">
                <h2><i class="fa fa-building"></i> Departments</h2>
            </div>
        </div>
    </div>
    <!-- Content
    ================================================== -->
    <div class="container">

        <!-- Table -->
        <div class="sixteen columns">

            <p class="margin-bottom-25">Department is a functional organization within your company, e.g. Finance, IT, HR. You can add and manage departments for your company in this area. As you create accounts for employees within your company, you can specify what department they belong to and assign rights accordingly.</p>

            <table class="manage-table resumes responsive-table">
                <tr>
                    <th><i class="fa fa-user"></i></th>
                    <th><i class="fa fa-file-text"></i> Details</th>
                    <th><i class="fa fa-pencil"></i> Edit</th>
                    <th><i class="fa fa-eye-slash"></i> Hide</th>
                    <th><i class="fa fa-remove"></i> Remove</th>
                </tr>
                @{
                    List<Din_Media_Group_Job_Portal.Models.tb_department_employer> departments = Model.tb_profile_employer.FirstOrDefault().tb_department_employer.ToList();
                    for (int i =0; i < departments.Count; i++)
                    {
                        
                      
                     <tr>
                    <td class="title">@departments.ElementAt(i).department_name</td>
                    <td><a href="@Url.Content("~/Employer/DepartmentDetails")">View Detail</a></td>
                    <td><a href=".department-edit" class="popup-with-zoom-anim" > Edit</a></td>
                    <td><a href=""> Hide</a></td>
                    <td><a href=""> Remove</a></td>

                </tr>
                    }
                
                 }
                
            </table>

            <br>

            <a href=".department-add" class="popup-with-zoom-anim button">Add Department</a>
            <!--
            Add New Department Modal
                -->
            <div id="small-dialog" class="zoom-anim-dialog mfp-hide apply-popup department-add">
                <div class="small-dialog-headline">
                    <h2 id="change-title-popup">Add Department</h2>
                </div>
                <div class="small-dialog-content">
                    <form action="#" method="get">
                        Department Name
                        <input class="search-field" type="text" placeholder="e.g. HR" value=""  />
                        Number of Employees in that Department
                        <input class="search-field" type="number" placeholder="e.g. 4" value="" />
                        Deprtment Introduction
                        <textarea name="desc" cols="30" rows="10" placeholder="Write about Department" ></textarea>
                        <button class="send">Save Department</button>
                    </form>
                </div>
            </div>
            <!--
                update department
            -->
            <div id="small-dialog" class="zoom-anim-dialog mfp-hide apply-popup department-edit">
                <div class="small-dialog-headline">
                    <h2 id="change-title-popup">Edit Department</h2>
                </div>
                <div class="small-dialog-content">
                    <form action="#" method="get">
                        Department Name
                        <input class="search-field" type="text" placeholder="e.g. HR" value="HR" id="department-name" />
                        Number of Employees in that Department
                        <input class="search-field" type="number" placeholder="e.g. 4" value=10 id="department-employees" />
                        Deprtment Introduction
                        <textarea name="desc" cols="30" rows="10" placeholder="Write about Department" id="department-descripttion">human resource deaprtment</textarea>
                        <button class="send">Save Department</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Footer
    ================================================== -->
    <div class="margin-top-60"></div>

    @Html.Partial("~/Views/Footer/_partialUserFooter.cshtml")

    <!-- Back To Top Button -->
    <div id="backtotop"><a href="#"></a></div>

</div>
<!-- Wrapper / End -->
