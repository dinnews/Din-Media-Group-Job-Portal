@{
    ViewBag.Title = "Home";
    Layout = "~/Views/Shared/UserLayout.cshtml";
  }




<div id="wrapper">


    <!-- Header
    ================================================== -->
    <header class="sticky-header full-width">
        @Html.Partial("~/Views/Header/HeaderSelectionEmployer.cshtml")

    </header>
    <div class="clearfix"></div>
    <script>
        $(".sticky-header #logo a img").attr("src", "/Content/userContent/images/logo.png");
    </script>


    <!-- Titlebar
    ================================================== -->

    <div id="titlebar" class="resume">
        <div class="container">
            <div class="ten columns">
                <div class="resume-titlebar">
                    <img src="~/Content/userContent/images/resumes-list-avatar-01.png" alt="">
                    <div class="resumes-list-content">
                        <h4>Microsoft <span>An Information Technology Company</span></h4>
                        <span class="icons"><i class="fa fa-map-marker"></i> Mountain View, CA</span>
                        
                        <span class="icons"><a href="#"><i class="fa fa-link"></i> Website</a></span>
                        
                        <div class="skills">
                            <span>Software</span>
                            <span>IT</span>
                            <span>Marketing</span>
                        </div>
                        <div class="clearfix"></div>

                    </div>
                </div>
            </div>

            <div class="six columns">
                <div class="two-buttons">

                    <a href="@Url.Content("~/Employer/PostJob")" class="button">Post a Job</a>

                    <a href="#" class="button dark"><i class="fa fa-user"></i> View Profile</a>


                </div>
            </div>

        </div>
    </div>
    


    <!-- Content
    ================================================== -->
    <div class="container">

        <!-- Table -->
        <div class="sixteen columns">

            <p class="margin-bottom-25">Your listings are shown in the ;ist below. Expired listings will be automatically removed after 30 days.</p>

            <table class="manage-table responsive-table">

                <tr>
                    <th><i class="fa fa-file-text"></i> Title</th>
                    <th><i class="fa fa-check-square-o"></i> Filled?</th>
                    <th><i class="fa fa-calendar"></i> Date Posted</th>
                    <th><i class="fa fa-calendar"></i> Date Expires</th>
                    <th><i class="fa fa-user"></i> Applications</th>
                    <th></th>
                </tr>

                <!-- Item #1 -->
                <tr>
                    <td class="title"><a href="#">Marketing Coordinator - SEO / SEM Experience <span class="pending">(Pending Approval)</span></a></td>
                    <td class="centered">-</td>
                    <td>September 30, 2015</td>
                    <td>October 10, 2015</td>
                    <td class="centered">-</td>
                    <td class="action">
                        <a href="#" class="delete"><i class="fa fa-remove"></i> Delete</a>
                    </td>
                </tr>

                <!-- Item #2 -->
                <tr>
                    <td class="title"><a href="#">Web Developer - Front End Web Development, Relational Databases</a></td>
                    <td class="centered">-</td>
                    <td>September 30, 2015</td>
                    <td>October 10, 2015</td>
                    <td class="centered"><a href="@Url.Content("~/Employer/ManageApplications")" class="button">Show (4)</a></td>
                    <td class="action">
                        <a href="#"><i class="fa fa-pencil"></i> Edit</a>
                        <a href="#"><i class="fa  fa-check "></i> Mark Filled</a>
                        <a href="#" class="delete"><i class="fa fa-remove"></i> Delete</a>
                    </td>
                </tr>

                <!-- Item #2 -->
                <tr>
                    <td class="title"><a href="#">Power Systems User Experience Designer</a></td>
                    <td class="centered"><i class="fa fa-check"></i></td>
                    <td>May 16, 2015</td>
                    <td>June 30, 2015</td>
                    <td class="centered"><a href="@Url.Content("~/Employer/ManageApplications")" class="button">Show (9)</a></td>
                    <td class="action">
                        <a href="#" class="delete"><i class="fa fa-remove"></i> Delete</a>
                    </td>
                </tr>

            </table>

            <br>
            <a href="@Url.Content("~/Employer/PostJob")" class="button">Add Job</a>

        </div>

    </div>


    <!-- Footer
    ================================================== -->
    <div class="margin-top-60"></div>

    @Html.Partial("~/Views/Footer/_partialUserFooter.cshtml")

    <!-- Back To Top Button -->
    <div id="backtotop"><a href="#"></a></div>

</div>
<!-- Wrapper / End -->




