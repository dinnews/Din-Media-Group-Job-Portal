@model Din_Media_Group_Job_Portal.Models.tb_user
@{
    ViewBag.Title = "Edit Dashboard";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}
<script type="text/javascript" src="/Content/datepicker/jquery-ui.js"></script>
<link type="text/css" href="/Content/datepicker/jquery-ui.css" rel="stylesheet" />
<script>
    jQuery(document).ready(function () {
        $('#company-establishment').datepicker({
            //comment the beforeShow handler if you want to see the ugly overlay
            beforeShow: function () {
                setTimeout(function () {
                    $('.ui-datepicker').css('z-index', 99999999999999);
                }, 0);
            }
        });
    });
</script>

<div id="wrapper">


    <!-- Header
    ================================================== -->
    <header class="sticky-header full-width">
        @Html.Partial("~/Views/Header/HeaderSelectionEmployer.cshtml")
    </header>
    <div class="clearfix"></div>
    <script>
        $(".sticky-header #logo a img").attr("src", "/Content/userContent/images/logo.png");
    </script>

    <!-- Titlebar
    ================================================== -->
    <div id="titlebar" class="single submit-page" style="background: url(/Employer_images/cover_images/edit_cover.jpg) fixed border-box no-repeat; background-size: 100% 100%; background-size: contain; background-size: cover; ">
        <div class="container" style="background-color: rgba(211, 211, 211, 0.5);">
            <div class="sixteen columns">
                <h2><i class="fa fa-pencil-square-o"></i> Edit Dashboard</h2>
            </div>
        </div>
    </div>
    <!-- Content
    ================================================== -->
    <div class="container">
        <!-- Submit Page -->
        <div class="sixteen columns">
            <form action="/Employer/UpdateProfile" method="post" enctype="multipart/form-data">
                <div class="submit-page">
                    <div class="form">

                        <h5>Company Location</h5>
                        <span style="color:red;">@ViewBag.Location</span>
                        <input class="search-field" type="text" placeholder="e.g. Lahore, Pakistan" value="@Model.tb_profile_employer.FirstOrDefault().company_location" id="company_location" name="company_location" />
                    </div>
                    <!-- no of employees -->
                    <div class="form">
                        <h5>Number of Employees</h5>
                        <span style="color:red;">@ViewBag.Employees</span>
                        <input class="search-field" type="number" placeholder="e.g. 10" value="@Model.tb_profile_employer.FirstOrDefault().no_of_employees" name="no_of_employees" />
                    </div>

                    <!-- Title -->
                    <div class="form">
                        <h5>Date of Establishment of your company</h5>
                        <span style="color:red;">@ViewBag.Date</span>
                        <input class="search-field" type="text" placeholder="e.g. 03/22/2017" value="@Model.tb_profile_employer.FirstOrDefault().company_establishment_date" id="company-establishment" name="company_establishment_date" />
                    </div>

                    <!-- Video

                    <div class="form">
                        <h5>Upload Video <span>(optional)</span></h5>
                        <label class="upload-btn">
                            <input type="file" multiple />
                            <i class="fa fa-upload"></i> Browse
                        </label>
                        <span class="fake-input">No file selected</span>
                    </div> -->

                    <!-- Description -->
                    <div class="form">
                        <h5>Summary (About company)</h5>
                        <span style="color:red;">@ViewBag.Summary</span>
                        <textarea class="" name="summary" cols="40" rows="5" id="summary" spellcheck="true">@Model.tb_profile_employer.FirstOrDefault().summary</textarea>
                    </div>



                    <div class="divider margin-top-0 padding-reset"></div>
                    <button type="submit" class="button big margin-top-5">Preview <i class="fa fa-arrow-circle-right"></i></button>
                </div>
                </form>
        </div>
    </div>

    <!-- Footer
    ================================================== -->
    <div class="margin-top-60"></div>

    @Html.Partial("~/Views/Footer/_partialUserFooter.cshtml")

    <!-- Back To Top Button -->
    <div id="backtotop"><a href="#"></a></div>

</div>
<!-- Wrapper / End -->