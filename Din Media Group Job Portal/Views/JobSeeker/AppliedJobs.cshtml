@{
    ViewBag.Title = "Applied Jobs";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}

<div id="wrapper">

    <!-- Header
    ================================================== -->
    <header class="sticky-header full-width">
        @Html.Partial("~/Views/Header/HeaderSelectionJobSeeker.cshtml")
    </header>
    <div class="clearfix"></div>
    <script>
        $(".sticky-header #logo a img").attr("src", "/Content/userContent/images/logo.png");
    </script>
  <!-- Titlebar
    ================================================== -->
    <div id="titlebar" class="single">
        <div class="container">

            <div class="sixteen columns">
                <h2>Aplied Jobs</h2>
                <nav id="breadcrumbs">
                    <ul>
                        <li>You are here:</li>
                        <li><a href="#">Home</a></li>
                        <li>Applied Jobs</li>
                    </ul>
                </nav>
            </div>

        </div>
    </div>


    <!-- Content
    ================================================== -->
    <div class="container">

        <!-- Table -->
        <div class="sixteen columns">

            <p class="margin-bottom-25">You have Applied for 30 jobs from 31-12-2016 to 17-02-2017</p>

            <table class="manage-table responsive-table">

                <tr>
                    <th><i class="fa fa-file-text"></i> Title</th>
                    <th><i class="fa fa-calendar"></i> Date Posted</th>
                    <th><i class="fa fa-calendar"></i> Expire Date</th>
                    <th><i class="fa fa-calendar"></i> Date Applied</th>
                    <th><i class="fa fa-user"></i> Applications</th>
                    <th>Action</th>
                </tr>

                <!-- Item #1 -->
                <tr>
                    <td class="title"><a href="#">Marketing Coordinator - SEO / SEM Experience </a></td>
                    <td>September 30, 2015</td>
                    <td>October 20, 2015</td>
                    <td>October 10, 2015</td>
                    <td class="centered"><a href="#small-dialog" class="popup-with-zoom-anim button">Show</a></td>
                    <td class="action">
                        <a href="#" class="delete"><i class="fa fa-remove"></i> Remove</a>
                    </td>
                </tr>

                <!-- Item #2 -->
                <tr>
                    <td class="title"><a href="#">Web Developer - Front End Web Development, Relational Databases</a></td>
                    <td>September 30, 2015</td>
                    <td>October 20, 2015</td>
                    <td>October 10, 2015</td>
                    <td class="centered"><a href="#small-dialog" class="popup-with-zoom-anim button">Show</a></td>
                    <td class="action">
                        <a href="#" class="delete"><i class="fa fa-remove"></i> Remove</a>
                    </td>
                </tr>

                <!-- Item #2 -->
                <tr>
                    <td class="title"><a href="#">Power Systems User Experience Designer</a></td>
                    <td>May 16, 2015</td>
                    <td>October 20, 2015</td>
                    <td>June 30, 2015</td>
                    <td class="centered"><a href="#small-dialog" class="popup-with-zoom-anim button" >Show</a></td>
                    <td class="action">
                        <a href="#" class="delete"><i class="fa fa-remove"></i> Remove</a>
                    </td>
                </tr>

            </table>

            <br>
            <a href="@Url.Content("~/Jobseeker/BrowseJob")" class="button">Browse Jobs</a>

        </div>

    </div>


    <!-- Footer
    ================================================== -->
    <div class="margin-top-60"></div>

    @Html.Partial("~/Views/Footer/_partialUserFooter.cshtml")

    <!-- Back To Top Button -->
    <div id="backtotop"><a href="#"></a></div>

</div>
<!-- Wrapper / End -->

<!--
    View Application Popup
-->

<div id="small-dialog" class="zoom-anim-dialog mfp-hide apply-popup">
    <div class="small-dialog-headline">
        <h2>Application View</h2>
    </div>

    <div class="small-dialog-content">
            <label for="salary-expectation">
                Expected Salary:
                <input type="text" value="35000-40000" readonly/>
            </label>
        
            <label for="currently-working">
                Currently Working: <span>Yes</span>
            </label>

        <span style="float:right">
            <label for="working-duration">
                Working Duration:
                <input type="text" name="last-name" class="form-last-name" placeholder="e.g. 9AM -5PM" value="Less than 1 year" readonly />
            </label>
            <label for="availabitiy">
                Availability (if you are selected):
                <input type="text" name="last-name" class="form-last-name" placeholder="2017-02-22" id="datepicker1" value="2017-02-22" readonly />
            </label>

        </span>
        <span style="float:left">
            <label for="company-name">
                Comapny Name:
                <input type="text" name="last-name" class="form-last-name" placeholder="e.g. Din Media Group" value="Din Media Group" readonly />
            </label>
            <label for="current Salary">
                Current Salary:
                <input type="text" name="last-name" class="form-last-name" placeholder="e.g. 20000" value="35000" readonly />
            </label>
        </span>
        <span>
            <label for="textarea">
               
                <textarea id="cover-letter" readonly></textarea>
            </label>
        </span>
       
            <script>
    document.getElementById("cover-letter").value = "A job application letter, also known as a cover letter, should be sent or uploaded with your resume when applying for jobs. The job application letters you send explain to the employer why you are qualified for the position and why you should be selected for an interview.";
            </script>

            <!-- Upload CV -->
        <div class="upload-info"><i class="fa fa-file-text"></i><strong> abc.docx</strong> </div>
        <div class="clearfix"></div>
        <div class="divider"></div>
    </div>

</div>
