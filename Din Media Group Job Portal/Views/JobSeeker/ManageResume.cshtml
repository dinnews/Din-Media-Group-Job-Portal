@{
    ViewBag.Title = "ManageResume";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}

<div id="wrapper">

    <!-- Header
    ================================================== -->
    <header class="sticky-header full-width">
        @Html.Partial("~/Views/Header/HeaderSelectionJobSeeker.cshtml")
    </header>
    <div class="clearfix"></div>
    <script>
        $(".sticky-header #logo a img").attr("src", "/Content/userContent/images/logo.png");
    </script>

    <!-- Titlebar
    ================================================== -->
    <div id="titlebar" class="single">
        <div class="container">

            <div class="sixteen columns">
                <h2>Manage Resumes</h2>
                <nav id="breadcrumbs">
                    <ul>
                        <li>You are here:</li>
                        <li><a href="#">Home</a></li>
                        <li>Candidate Dashboard</li>
                    </ul>
                </nav>
            </div>

        </div>
    </div>


    <!-- Content
    ================================================== -->
    <div class="container">

        <!-- Table -->
        <div class="sixteen columns">

            <p class="margin-bottom-25">Your resume can be viewed, edited or removed below.</p>

            <table class="manage-table resumes responsive-table">

                <tr>
                    <th><i class="fa fa-user"></i> CV Name</th>
                    <th><i class="fa fa-file-text"></i> Catagory</th>
                    <th><i class="fa fa-calendar"></i> Date Posted</th>

                    <th></th>
                </tr>

                <!-- Item #1 -->
                <tr>
                    <td class="title"><a href="#">John Doe</a></td>
                    <td>Front End Web Developer</td>
                    <td>September 30, 2015</td>
                    <td class="action">
                        <a href="#update-cv-dialog" class="popup-with-zoom-anim"><i class="fa fa-pencil"></i> Edit</a>
                        <a href="#"><i class="fa  fa-eye-slash"></i> Hide</a>
                        <a href="#" class="delete"><i class="fa fa-remove"></i> Delete</a>
                    </td>
                </tr>

                <!-- Item #1 -->
                <tr>
                    <td class="title"><a href="#">John Doe</a></td>
                    <td>Logo Designer</td>
                    <td>August 12, 2015</td>
                    <td class="action">
                        <a href="#update-cv-dialog" class="popup-with-zoom-anim"><i class=" fa fa-pencil"></i> Edit</a>
                        <a href="#"><i class="fa  fa-eye-slash"></i> Hide</a>
                        <a href="#" class="delete"><i class="fa fa-remove"></i> Delete</a>
                    </td>
                </tr>

            </table>

            <br>

            <a href="#small-dialog" class="popup-with-zoom-anim button">Add Resume</a>
            <!--
        Add New CV Modal
            -->
            <div id="small-dialog" class="zoom-anim-dialog mfp-hide apply-popup">
                <div class="small-dialog-headline">
                    <h2>Add Your CV</h2>
                </div>
                <div class="small-dialog-content">
                    <form action="#" method="get">
                        <input type="text" placeholder="CV Name" value="" />
                        <select id="cv-catagory" data-placeholder="Choose Category" class="chosen-select-no-single">
                            <option value="Default">Default</option>
                            <option value="Public">Public</option>
                            <option value="Private">Private</option>
                            <option value="Other">Other</option>
                        </select>
                        <input id="cv-catagory-other" type="text" placeholder="If others" value="" disabled />
                        <!-- Upload CV -->
                        <div class="upload-info"><strong>Upload your CV </strong> <span>Max. file size: 5MB</span></div>
                        <div class="clearfix"></div>
                        <label class="upload-btn">
                            <input type="file" multiple />
                            <i class="fa fa-upload"></i> Browse
                        </label>
                        <span class="fake-input">No file selected</span>
                        <div class="divider"></div>
                        <button class="send">Save CV</button>
                    </form>
                </div>
            </div>
            <!--
        Update CV Modal
             -->
            
            <div id="update-cv-dialog" class="zoom-anim-dialog mfp-hide apply-popup">
                <div id="small-dialog">
                    <div class="small-dialog-headline">
                        <h2>Add Your CV</h2>
                    </div>
                    <div class="small-dialog-content">
                        <form action="#" method="get">
                            <input type="text" placeholder="CV Name" value="" />

                            <select id="cv-update-catagory" data-placeholder="Choose Category" class="chosen-select-no-single">
                                <option value="Default">Default</option>
                                <option value="Public">Public</option>
                                <option value="Private">Private</option>
                                <option value="Other" selected>Other</option>
                            </select>
                            <input id="cv-update-catagory-other" type="text" placeholder="If others" value="Research" disabled />
                            <!-- Upload CV -->
                            <div class="upload-info"><i class="fa fa-file-text"></i><strong> abc.docx</strong> </div>
                            <div class="clearfix"></div>
                            <div class="divider"></div>
                            <button class="send">Update CV</button>
                        </form>
                    </div>
                </div>
            </div>

        </div>
     </div>
    


    <!-- Footer
    ================================================== -->
    <div class="margin-top-60"></div>

    @Html.Partial("~/Views/Footer/_partialUserFooter.cshtml")

    <!-- Back To Top Button -->
    <div id="backtotop"><a href="#"></a></div>

</div>
<!-- Wrapper / End -->
<script>
    jQuery(document).ready(function () {

        $('#cv-catagory').change(function () {
            var optionSelected = $(this).find("option:selected");
            var valueSelected = optionSelected.val();
            if (valueSelected.toUpperCase() == "OTHER")
            {
                $('#cv-catagory-other').prop('disabled', false);
            }
            else
            {
                $('#cv-catagory-other').prop('disabled', true);
            }
        });
        $('#cv-update-catagory').change(function () {
            var optionSelected = $(this).find("option:selected");
            var valueSelected = optionSelected.val();
            if (valueSelected.toUpperCase() == "OTHER") {
                $('#cv-update-catagory-other').prop('disabled', false);
            }
            else {
                $('#cv-update-catagory-other').prop('disabled', true);
            }
        });
       
    });
</script>