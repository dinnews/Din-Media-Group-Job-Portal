                        <a href="@Url.Content("~/JobSeeker/JobDetails")"><i class="fa fa-eye"></i> View </a>
                        <a href="#" class="delete"><i class="fa fa-remove"></i> Remove</a>
                    </td>
                </tr>

                <!-- Item #2 -->
                <tr>
                    <td class="title"><a href="#">Power Systems User Experience Designer</a></td>
                    <td>May 16, 2015</td>
                    <td>June 30, 2015</td>
                    <td>November 10, 2015</td>
