                        <a href="@Url.Content("~/JobSeeker/JobDetails")"><i class="fa fa-eye"></i> View </a>
                        <a href="#" class="delete"><i class="fa fa-remove"></i> Remove</a>
                    </td>
                </tr>

            </table>

            <br>
            <a href="@Url.Content("~/Jobseeker/BrowseJob")" class="button">Browse Jobs</a>

        </div>

    </div>


    <!-- Footer
    ================================================== -->
    <div class="margin-top-60"></div>

    @Html.Partial("~/Views/Footer/_partialUserFooter.cshtml")

    <!-- Back To Top Button -->
    <div id="backtotop"><a href="#"></a></div>

