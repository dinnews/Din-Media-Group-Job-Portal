@model Din_Media_Group_Job_Portal.Models.tb_profile_employee
@{
    ViewBag.Title = "AddResume";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}

<script type="text/javascript" src="/Content/datepicker/jquery-ui.js"></script>
<link type="text/css" href="/Content/datepicker/jquery-ui.css" rel="stylesheet" />
<script src="~/Scripts/FormValidations/CreateProfileValidations.js"></script>
<style>
    .ui-datepicker {
        position: relative;
        z-index: 10000 !important;
    }

    .datepicker {
        z-index: 999999 !important;
    }
</style>
<div id="wrapper">

<!-- Header
================================================== -->
<header class="sticky-header full-width">
    @Html.Partial("~/Views/Header/HeaderSelectionJobSeeker.cshtml")
</header>
<div class="clearfix"></div>
<script>
    $(".sticky-header #logo a img").attr("src", "/Content/userContent/images/logo.png");
</script>

<!-- Titlebar
================================================== -->
<div id="titlebar" class="single submit-page">
    <div class="container">
        <div class="sixteen columns">
            <h2><i class="fa fa-plus-circle"></i> Add Resume</h2>
        </div>
    </div>
</div>
<!-- Content
================================================== -->
<div class="container">
    <!-- Submit Page -->
    <div class="sixteen columns">
        <div class="submit-page">
            <!-- Notice -->
            <div class="notification notice closeable margin-bottom-40">
                <p><span>You have not created your profile yet.</span> Create your profile to get attention of companies.</p>
            </div>
            <!-- Linked In
            <div class="form">
                <h5>LinkedIn</h5>
                <a href="#" class="button linkedin-btn">Import from LinkedIn</a>
            </div> -->
            <!-- Email -->
            <form action="/Jobseeker/CreateProfileFirstTime" method="post" enctype="multipart/form-data" >


                <div class="form">
                    <h5>Mobile No(e.g 033399887799) <span id="error_mobile" style="color:red;float:right"></span></h5>
                    <input class="search-field" type="text" placeholder="____-_______" name="mobile" id="mobile" onblur="MobileNoValidation()" />
                </div>
                <!-- Email 
                <div class="form">
                    <h5>Your Email</h5>
                    <input class="search-field" type="text" placeholder="mail@example.com" value="" readonly />
                </div>-->
                <!-- Title
        <div class="form">
            <h5>Professional Title</h5>
            <input class="search-field" type="text" placeholder="e.g. Web Developer" value="" />
        </div> -->
                <!-- Location
        <div class="form">
            <h5>Location</h5>
            <input class="search-field" type="text" placeholder="e.g. London, UK" value="" />
        </div> -->
                <!-- Logo -->
                <div class="form">
                    <h5>Profile Photo <span>(optional)</span> <span id="error_ProfilePhoto" style="color:red;float:right"></span></h5>
                    <label class="upload-btn">
                        <input type="file" name="profile_picture" id="profile_picture"  />
                        <i class="fa fa-upload"></i> Browse
                    </label>
                    <span class="fake-input">No file selected</span>
                </div>
                <div class="form">
                    <h5>Cover Photo <span>(optional)</span> <span id="error_CoverPhoto" style="color:red;float:right"></span></h5>
                    <label class="upload-btn">
                        <input type="file" name="cover_picture" id="cover_picture" />
                        <i class="fa fa-upload"></i> Browse
                    </label>
                    <span class="fake-input">No file selected</span>
                </div>

                <!-- Email -->
                <div class="form">
                    <h5>Video <span>(optional)</span></h5>
                    
                    <label class="upload-btn">
                        <input class="search-field" type="file" placeholder="A link to a video about you" value="" name="video" />
                        <i class="fa fa-upload"></i> Browse
                    </label>
                    <span class="fake-input">No file selected</span>
                </div>

                <!-- Description -->
                <div class="form">
                    <h5>Summary (About you, more than 50 words) <span id="error_Summary" style="color:red;float:right"></span></h5>
                    <textarea class="WYSIWYG" name="summary" cols="40" rows="3" id="summary" spellcheck="true" onblur="SummaryValidation()"></textarea>
                </div>

                <!-- Add URLs -->
                <div class="form with-line">
                    <h5>URL/s <span class="note">(optionally provide links to any of your websites or social network profiles)</span></h5>
                    <div class="form-inside">

                        <!-- Adding URL(s) -->
                        <div class="form boxed box-to-clone url-box">
                            <a href="#" class="close-form remove-box button"><i class="fa fa-close"></i></a>
                            <span id="error_urlname" style="color:red;float:right"></span><input class="search-field" type="text" placeholder="Name" value="" name="url_name" id="url_name" onblur="UrlNameValidation()" />
                            <span id="error_url" style="color:red;float:right"></span><input class="search-field" type="text" placeholder="http://" value="" name="url" id="url" onblur="UrlValidation()" />
                        </div>

                        <a href="#" class="button gray add-url add-box"><i class="fa fa-plus-circle"></i> Add URL</a>
                        <p class="note"></p>
                    </div>
                </div>

                <!-- Education -->
                <div class="form with-line">
                    <h5>Education <span>(optional)</span></h5>
                    <div class="form-inside">

                        <!-- Add Education -->
                        <div class="form boxed box-to-clone education-box">
                            <a href="#" class="close-form remove-box button"><i class="fa fa-close"></i></a>
                            Institution Name
                            <input class="search-field" type="text" placeholder="e.g. University of the Punjab" value="" name="institution_name" />
                            Degree Title
                            <input class="search-field" type="text" placeholder="e.g. BS Hons" value="" name="degree_title"/>
                            Field of Study
                            <input class="search-field" type="text" placeholder="e.g. Computer Science" value="" name="field_of_study"/>
                            <span style="float:left; width:45%;">
                                From Year
                                <input class="search-field" type="text" placeholder="e.g. 2107" value="" name="education_start_date"/>
                            </span>
                            <span style="float: right; width: 45%;" id="end-date">
                                To Year (or expected)
                                <input class="search-field" type="text" placeholder="e.g. 2017" value="" name="education_end_date"/>
                            </span>
                            <textarea name="education_notes" id="desc" cols="30" rows="10" placeholder="Notes (optional)" ></textarea>
                        </div>

                        <a href="#" class="button gray add-education add-box"><i class="fa fa-plus-circle"></i> Add Education</a>
                    </div>
                </div>
                <!-- Skill  -->
                <div class="form with-line">
                    <h5>Skills <span>(optional)</span></h5>
                    <div class="form-inside">

                        <!-- Add Skills -->
                        <div class="form boxed box-to-clone skills-box">
                            <a href="#" class="close-form remove-box button"><i class="fa fa-close"></i></a>
                            Add a new skill
                            <input class="search-field" type="text" placeholder="" value="" name="skil_name"/>
                            Experience with this skill
                            <select class="form-control md-input" name="skill_experience" id="workExp" style="height:50px;">
                                <option value="">Select One</option>
                                <option value="1">Less than 1 Year</option>
                                <option value="2">1 Year</option>
                                <option value="3">2 Years</option>
                                <option value="4">3 Years</option>
                                <option value="5">4 Years</option>
                                <option value="6">5+ Years</option>
                            </select>

                        </div>

                        <a href="#" class="button gray add-skill add-box"><i class="fa fa-plus-circle"></i> Add Skill</a>
                    </div>
                </div>

                <!-- Experience  -->
                <div class="form with-line">
                    <h5>Experience <span>(optional)</span></h5>
                    <div class="form-inside">

                        <!-- Add Experience -->
                        <div class="form boxed box-to-clone experience-box">
                            <a href="#" class="close-form remove-box button"><i class="fa fa-close"></i></a>
                            Title
                            <input class="search-field" type="text" placeholder="e.g. Software Engineer" value="" name="job_title"/>
                            Company
                            <input class="search-field" type="text" placeholder="e.g. Microsoft" value="" name="company_name" />
                            Location
                            <input class="search-field" type="text" placeholder="e.g. Lahore" value="" name="company_location"/>
                            <label for="current-job" id="current-job-checkbox">
                                <input type="checkbox" class="search-field" name="experience_currently_working"/> I currently work here
                            </label>
                            <span style="float:left; width:45%;">
                                From
                                <input type="text" class="form-last-name" placeholder="2017-02-22" id="datepicker1" name="experience_start_date" />
                            </span>
                            <span style="float: right; width: 45%;" id="end-date" class="end-date-current-job">
                                To
                                <input class="search-field" type="text" placeholder="e.g. 2017" value="" name="experience_end_date" />
                            </span>

                            <textarea name="experience_notes" id="desc" cols="30" rows="10" placeholder="Notes (optional)"></textarea>
                        </div>

                        <a href="#" class="button gray add-experience add-box"><i class="fa fa-plus-circle"></i> Add Experience</a>
                    </div>
                </div>
                <!-- Project  -->
                <div class="form with-line">
                    <h5>Projects <span>(optional)</span></h5>
                    <div class="form-inside">

                        <!-- Add Project -->
                        <div class="form boxed box-to-clone project-box">
                            <a href="#" class="close-form remove-box button"><i class="fa fa-close"></i></a>
                            Title
                            <input class="search-field" type="text" placeholder="e.g. Job Portal Desktop" value="" name="project_title" />
                            Position
                            <input class="search-field" type="text" placeholder="e.g. Project Manager" value="" name="position" />
                            URL
                            <input class="search-field" type="text" placeholder="e.g. https://" value="" name="project_url" />
                            <label for="current-job" id="current-job-checkbox">
                                <input type="checkbox" class="search-field" name="project_currently_working"/> Currently Working
                            </label>
                            <span style="float:left; width:45%;">
                                From
                                <input type="text" class="form-last-name" placeholder="2017-02-22" id="datepicker1" name="project_start_date" />
                            </span>
                            <span style="float: right; width: 45%;" id="end-date">
                                To
                                <input class="search-field" type="text" placeholder="e.g. 2017" value="" name="project_end_date"/>
                            </span>
                            <textarea name="project_notes" id="desc" cols="30" rows="10" placeholder="Notes (optional)"></textarea>
                        </div>

                        <a href="#" class="button gray add-experience add-box"><i class="fa fa-plus-circle"></i> Add Project</a>
                    </div>
                </div>
                <!-- Languages  -->
                <div class="form with-line">
                    <h5>Languages <span>(optional)</span></h5>
                    <div class="form-inside">

                        <!-- Add Languages -->
                        <div class="form boxed box-to-clone languges-box">
                            <a href="#" class="close-form remove-box button"><i class="fa fa-close"></i></a>
                            Add a new language
                            <select class="form-control md-input" name="language_name" id="workExp" style="height:50px;">
                                <option value=""> Select One </option>
                                <option value="557"> Albanian </option>
                                <option value="553"> Arabic </option>
                                <option value="559"> Armenian </option>
                                <option value="1167"> Balochi </option>
                                <option value="561"> Belarusan </option>
                                <option value="549"> Bosnian </option>
                                <option value="499"> Bulgarian </option>
                                <option value="473"> Cantonese </option>
                                <option value="475"> Catalan </option>
                                <option value="1338"> Chinese </option>
                                <option value="477"> Czech </option>
                                <option value="478"> Urdu </option>
                            </select>
                            Proficiency with this language
                            <select class="form-control md-input" name="language_proficiency" id="workExp" style="height:50px;">
                                <option value="">Select One</option>
                                <option value="1">Beginner</option>
                                <option value="2">Intermediate</option>
                                <option value="3">Expert</option>
                            </select>

                        </div>

                        <a href="#" class="button gray add-skill add-box"><i class="fa fa-plus-circle"></i> Add Language</a>
                    </div>
                </div>
                <div class="divider margin-top-0 padding-reset"></div>
                <button type="submit" class="button big margin-top-5">Preview <i class="fa fa-arrow-circle-right"></i></button>
            </form>
        </div>
    </div>
</div>

<!-- Footer
================================================== -->
<div class="margin-top-60"></div>

@Html.Partial("~/Views/Footer/_partialUserFooter.cshtml")
<!-- Back To Top Button -->
<div id="backtotop"><a href="#"></a></div>

</div>
<!-- Wrapper / End -->

<script>
    jQuery(document).ready(function () {
        $('#datepicker1').datepicker();
       // $('#myform :checkbox')
        $('#current-job-checkbox :checkbox').change(function () {
            if ($(this).is(':checked')) {
                //Do stuff
                $('#end-date').hide();
            }
            else
            {
                $('.end-date-current-job').show();
            }
        });
        
    });
</script>